
#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

void solve()
{
	int n;
	cin >> n;
	std::vector<int> a(n), b(n);
	for (int &x : a)cin >> x;
	for (int &x : b)cin >> x	;
	int ma = *min_element(a.begin(), a.end());
	int mb =	*min_element(b.begin(), b.end());
	int c = 0;

	for (int i = 0; i < n; i++)
	{
		while (a[i] != ma && b[i] != mb)
		{
			if (a[i] > ma && b[i] > mb) {
				a [i]--;
				b[i]--;
				c++;
			}
			else if (b[i] == mb && a[i] > ma)
			{
				a [i]--;
				c++;
			}
			else if (a[i] == ma && b[i] > mb )
			{
				b[i]--;
				c++;
			}
		}
	}
	cout  << c;
}
